<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context="doscom.tugas.kalkuatordoscom.MainActivity">

   <EditText
       android:paddingTop="80dp"
       android:layout_weight="8"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="0"
       android:textSize="90sp"
       android:id="@+id/ed_tampil"
       android:layout_marginBottom="10dp"
       android:padding="10dp"
       android:gravity="right"
       android:textIsSelectable="false"

       />
  <LinearLayout
      android:paddingTop="10dp"
      android:layout_weight="2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <LinearLayout

          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:paddingLeft="2dp"
              android:paddingRight="2dp"
              android:paddingBottom="1dp">
              <Button
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="*"
                  android:onClick="btn_kali"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="%"
                  android:onClick="btn_persen"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="X^"
                  android:onClick="btn_pangkat"/>

          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:paddingLeft="2dp"
              android:paddingRight="2dp"
              android:paddingBottom="1dp">
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="1"
                  android:onClick="btn_1"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="2"
                  android:onClick="btn_2"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="3"
                  android:onClick="btn_3"
                  />

          </LinearLayout>
      </LinearLayout>
      <LinearLayout

          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:paddingLeft="2dp"
              android:paddingRight="2dp"
              android:paddingBottom="1dp">
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="+"
                  android:onClick="btn_tambah"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="-"
                  android:onClick="btn_kurang"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="/"
                  android:onClick="btn_bagi"/>

          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:paddingLeft="2dp"
              android:paddingRight="2dp"
              android:paddingBottom="1dp">
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="4"
                  android:onClick="btn_4"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="5"
                  android:onClick="btn_5"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="6"
                  android:onClick="btn_6"/>

          </LinearLayout>
      </LinearLayout>
      <LinearLayout

          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:paddingLeft="2dp"
              android:paddingRight="2dp"
              android:paddingBottom="1dp">
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="sin"
                  android:onClick="btn_Sin"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="cos"
                  android:onClick="btn_Cos"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="tan"
                  android:onClick="btn_Tan"/>

          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              
              android:paddingLeft="2dp"
              android:paddingRight="2dp"
              android:paddingBottom="1dp">
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="7"
                  android:onClick="btn_7"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="8"
                  android:onClick="btn_8"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="9"
                  android:onClick="btn_9"
                  />

          </LinearLayout>
      </LinearLayout>
      <LinearLayout

          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:paddingLeft="2dp"
              android:paddingRight="2dp"
              android:paddingBottom="1dp">
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="="
                  android:onClick="btn_sama"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="CE"
                  android:onClick="btn_Clear"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="C"
                  android:onClick="btn_Delete"/>



          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:paddingLeft="2dp"
              android:paddingRight="2dp"
              android:paddingBottom="1dp">
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="00"
                  android:onClick="btn_00"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0"
                  android:onClick="btn_0"/>
              <Button
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="."
                  android:onClick="btn_Titik"
                  />

          </LinearLayout>
      </LinearLayout>
  </LinearLayout>



</LinearLayout>
